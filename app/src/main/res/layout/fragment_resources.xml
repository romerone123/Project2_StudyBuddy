<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp">

<!-- Title -->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Group Resources"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_gravity="center_horizontal" />

<!-- Upload Button -->
<Button
    android:id="@+id/uploadButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Upload Resource"
    android:layout_marginTop="16dp" />

<!-- Download Button -->
<Button
    android:id="@+id/downloadButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Download Resource"
    android:layout_marginTop="8dp" />

<!-- Shared Resources List (Placeholder) -->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Shared Resources:"
    android:textStyle="bold"
    android:layout_marginTop="16dp" />

<!-- Placeholder for the list of resources -->
<TextView
    android:id="@+id/resourceListPlaceholder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="No resources uploaded yet"
    android:padding="8dp"
    android:textColor="#888888"
    android:gravity="center"
    android:layout_marginBottom="16dp" />



</LinearLayout>