<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TextView to display the selected group -->
    <TextView
        android:id="@+id/selectedGroupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messaging group: "
        android:textSize="18sp"
        android:padding="16dp"/>

    <!-- ScrollView to allow scrolling through the chat -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- LinearLayout to hold the chat messages -->
        <LinearLayout
            android:id="@+id/chatMessagesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <!-- EditText for typing messages -->
    <EditText
        android:id="@+id/messageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type a message..." />

    <!-- Button to send the message -->
    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send" />

</LinearLayout>
